#!/bin/bash
#ctags -R --exclude=.git --exclude=log --languages=ruby * /var/lib/gems/1.9.1/gems/*
#ctags -R --exclude=.* --exclude=log --languages=ruby * `gem env gemdir`
ctags -R \
    --exclude=.* \
    --exclude=log \
    --exclude=tmp \
    --languages=ruby * $(bundle list --paths) \
    --regex-ruby='/^[ \t ]*scope[ \t ]*:([a-zA-Z0-9_]+)/\1/'
