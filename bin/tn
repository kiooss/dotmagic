#!/bin/bash

# abort if we're already inside a TMUX session
# [ "$TMUX" == "" ] || exit 0

if [[ "$TMUX" == "" ]]; then
  SESSION_NAME=$(basename "$PWD" | sed "s/^\.//g")
  tmux new -A -s "$SESSION_NAME"
else
  tmux display-popup -E "tmux list-sessions | sed -E 's/:.*$//' | grep -v \"^$(tmux display-message -p '#S')\$\" | fzf --reverse | xargs tmux switch-client -t"
fi
