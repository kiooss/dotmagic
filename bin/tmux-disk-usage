#!/bin/zsh

function tmux-disk-usage() {
    local percent=$(df -h /dev/sda1 | awk '{ print $5 }' | tail -n 1 | sed 's/%//g')
    if [[ $percent -ge 95 ]]; then
        echo "#[fg=colour235,bg=colour9] ðŸ’¾  $percentï¼…"
    else
        echo "#[fg=colour233,bg=colour72] ðŸ’¾  $percentï¼…"
    fi
}

tmux-disk-usage
